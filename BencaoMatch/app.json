{
  "expo": {
    "name": "BençãoMatch",
    "slug": "bencaomatch",
    "version": "1.0.0",
    "description": "O maior aplicativo de relacionamento cristão do Brasil",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6BBBDD"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.bencaomatch.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "O app usa sua localização para encontrar pessoas próximas.",
        "NSCameraUsageDescription": "O app precisa acessar sua câmera para tirar fotos de perfil.",
        "NSPhotoLibraryUsageDescription": "O app precisa acessar suas fotos para definir foto de perfil."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6BBBDD"
      },
      "package": "com.bencaomatch.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa acessar suas fotos para definir foto de perfil."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O app usa sua localização para encontrar pessoas próximas."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6BBBDD"
        }
      ]
    ],
    "scheme": "bencaomatch",
    "experiments": {
      "typedRoutes": true
    }
  }
}
