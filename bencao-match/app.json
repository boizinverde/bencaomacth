{
  "expo": {
    "name": "BençãoMatch",
    "slug": "bencao-match",
    "version": "1.0.0",
    "description": "Aplicativo de relacionamento cristão - Encontre conexões baseadas na fé",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6B46C1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.bencaomatch.app",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6B46C1"
      },
      "package": "com.bencaomatch.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa acessar suas fotos para definir foto de perfil."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "O app precisa acessar sua câmera para tirar fotos de perfil."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O app usa sua localização para encontrar pessoas próximas."
        }
      ]
    ],
    "scheme": "bencaomatch",
    "experiments": {
      "typedRoutes": true
    }
  }
}
